{% extends 'base.html.twig' %}

{% block title %}Quai Antique Administration!
{% endblock %}
{% block body %}
	<nav class="navbar navbar-expand-lg bg-black text-uppercase fixed-top " id="mainNav">
		<div class="container">
			<div class="row">
				<div class='col col-lg-2 col-md-4 col-sm-4 d-flex justify-content-sm-center'>
					<img src="asset/images/logo/logo1.png" class='img-fluid' alt='quai antique logo'/>
				</div>
				<div class="col col-lg-8 col-md-4 col-sm-2"></div>
				<ul class=' col col-lg-2 col-sm-4 d-flex align-items-center'>
					{% if is_granted('ROLE_ADMIN') %}
						<button class="btn btn-primary mx-3">
							<a class="nav-link" href="{{ path('admin') }}">Dashboard</a>
						</button>
					{% endif %}
					{% if is_granted('ROLE_USER') %}
						<button class="btn btn-danger">
							<a class="nav-link text-black" href="{{ path('security_logout') }}">Logout</a>
						</button>
					{% else %}
						<button class="btn btn-primary mx-3">
							<a class="nav-link " href={{ path('app_login')}}>Login</a>
						</button>
						<button class="btn btn-primary">
							<a class="nav-link " href={{ path('app_register')}}>Register</a>
						</button>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
	<header class="d-flex align-items-center text-white text-center">
		<div class="w-75 text-center m-auto">
			<h1 class="font-weight-bold display-2 mx-5">Bienvenue sur votre compte personel chez Quai Antique</h1>
			<button class="btn btn-success mt-5">
				<a class="nav-link text-black fs-3" href="https://quai-antique-front.vercel.app/">Le site</a>
			</button>
		</div>
	</header>

{% endblock %}
